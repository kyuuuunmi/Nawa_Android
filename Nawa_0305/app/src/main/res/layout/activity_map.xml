<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:background="#91bbce"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <Space
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="0.05" />

            <LinearLayout
                android:id="@+id/toolbar_btnBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.06">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@mipmap/map_16" />
            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.14"
                android:background="@null"
                android:src="@mipmap/map_toolbar_text" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="0.61" />

            <ImageButton
                android:id="@+id/completebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.08"
                android:background="@null"
                android:src="@mipmap/contact_png_11" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="0.07" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.21"
        android:background="#a7c9d8"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.61"
            android:orientation="vertical"
            android:weightSum="1">

            <Space
                android:layout_width="1px"
                android:layout_height="0dp"
                android:layout_weight="0.14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.86"
                android:orientation="horizontal"
                android:weightSum="1">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="0.1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.11"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageButton
                        android:id="@+id/myLocation"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.58"
                        android:background="@mipmap/map_i_unclick" />

                    <Space
                        android:layout_width="1px"
                        android:layout_height="0dp"
                        android:layout_weight="0.14" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.14"
                        android:src="@mipmap/map_now" />

                    <Space
                        android:layout_width="1px"
                        android:layout_height="0dp"
                        android:layout_weight="0.14" />

                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="0.12" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.11"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageButton
                        android:id="@+id/taste"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.58"
                        android:background="@mipmap/map_food_unclick" />

                    <Space
                        android:layout_width="1px"
                        android:layout_height="0dp"
                        android:layout_weight="0.14" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.14"
                        android:src="@mipmap/map_taste" />

                    <Space
                        android:layout_width="1px"
                        android:layout_height="0dp"
                        android:layout_weight="0.14" />
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="0.12" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.11"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageButton
                        android:id="@+id/cafe"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.58"
                        android:background="@mipmap/map_cafe_unclick" />

                    <Space
                        android:layout_width="1px"
                        android:layout_height="0dp"
                        android:layout_weight="0.14" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.14"
                        android:src="@mipmap/map_cafe" />

                    <Space
                        android:layout_width="1px"
                        android:layout_height="0dp"
                        android:layout_weight="0.14" />
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="0.12" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.11"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/distance"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.58"
                        android:background="@mipmap/map_filter_unclick" />

                    <Space
                        android:layout_width="1px"
                        android:layout_height="0dp"
                        android:layout_weight="0.14" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.14"
                        android:src="@mipmap/map_distance" />

                    <Space
                        android:layout_width="1px"
                        android:layout_height="0dp"
                        android:layout_weight="0.14" />

                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="0.1" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.39"
            android:orientation="vertical"
            android:weightSum="1"
            >
            <Space
                android:layout_width="1px"
                android:layout_height="0dp"
                android:layout_weight="0.09" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.67">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:id="@+id/searchlayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="0.05" />

                        <EditText
                            android:id="@+id/editTextQuery"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:background="@mipmap/map_search_bar"
                            android:hint="Search"
                            android:paddingLeft="15dp"
                            android:textSize="15dp" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="0.01" />

                        <ImageButton
                            android:id="@+id/buttonSearch"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.09"
                            android:background="@mipmap/map_button" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="0.05" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/seekbarlayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="0.06" />

                        <TextView
                            android:id="@+id/txtdistance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:textColor="#ffffff"
                            android:layout_marginTop="12dp"
                            android:textSize="10dp" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="0.01" />

                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.78"
                            android:max="5000"
                            android:startColor="#ffffff"
                            android:progress="0"
                            android:thumb="@mipmap/map_marker_2" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="0.05" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <Space
                android:layout_width="1px"
                android:layout_height="0dp"
                android:layout_weight="0.22" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <net.daum.mf.map.api.MapView
                android:id="@+id/map_mapview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/clickpoint"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_alignBottom="@+id/map_mapview"
                android:background="@mipmap/map_detail"
                android:orientation="horizontal"
                android:weightSum="1">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="0.14" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.48"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <Space
                        android:layout_width="1px"
                        android:layout_height="0dp"
                        android:layout_weight="0.216" />

                    <TextView
                        android:id="@+id/txtname"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.19"
                        android:text="dd"
                        android:textColor="#000000"
                        android:textSize="21dp" />

                    <Space
                        android:layout_width="1px"
                        android:layout_height="0dp"
                        android:layout_weight="0.054" />

                    <TextView
                        android:id="@+id/txtadress"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.11"
                        android:text="dd"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <Space
                        android:layout_width="1px"
                        android:layout_height="0dp"
                        android:layout_weight="0.005" />

                    <TextView
                        android:id="@+id/txttel"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.125"
                        android:text="dd"
                        android:textColor="#000000"
                        android:textSize="11dp" />

                    <Space
                        android:layout_width="1px"
                        android:layout_height="0dp"
                        android:layout_weight="0.357" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.305"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <Space
                        android:layout_width="1px"
                        android:layout_height="0dp"
                        android:layout_weight="0.59" />

                    <ImageButton
                        android:id="@+id/detailbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.26"
                        android:background="@mipmap/map_call_button_18" />

                    <Space
                        android:layout_width="1px"
                        android:layout_height="0dp"
                        android:layout_weight="0.15" />
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="0.075" />


            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>