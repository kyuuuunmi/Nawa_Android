<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/push_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="mobile.example.demo.gcm.PushStorageActivity">


    <Space
        android:layout_width="1px"
        android:layout_height="0dp"
        android:layout_weight="0.044" />

    <ImageView
        android:id="@+id/ImageViewTitlebar_push"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.059"
        android:background="@null"
        android:src="@mipmap/push_logo" />

    <Space
        android:layout_width="1px"
        android:layout_height="0dp"
        android:layout_weight="0.022" />

    <ImageView
        android:id="@+id/imageView_pushstorage"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.02"
        android:background="@null"
        android:src="@mipmap/push_logo2" />

    <Space
        android:layout_width="1px"
        android:layout_height="0dp"
        android:layout_weight="0.026" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.246"
        android:orientation="horizontal"
        android:weightSum="1">

        <Space
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="0.03" />

        <LinearLayout
            android:id="@+id/imageView_pushstorage_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.937"
            android:background="@mipmap/push_today"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.48"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:weightSum="1">

                <Space
                    android:layout_width="1px"
                    android:layout_height="0dp"
                    android:layout_weight="0.23" />

                <ImageView
                    android:id="@+id/img_push_logo_today"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.39"
                    android:src="@mipmap/push_logo_today" />

                <Space
                    android:layout_width="1px"
                    android:layout_height="0dp"
                    android:layout_weight="0.12" />

                <TextView
                    android:id="@+id/tvTitle_today"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    android:text="일정 제목"
                    android:textSize="12dp" />

                <Space
                    android:layout_width="1px"
                    android:layout_height="0dp"
                    android:layout_weight="0.16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.52"
                android:orientation="vertical"
                android:weightSum="1">

                <Space
                    android:layout_width="1px"
                    android:layout_height="0dp"
                    android:layout_weight="0.47" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.36"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_weight="0.24" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.07"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_push_map_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:background="@null"
                            android:src="@mipmap/push_map_today" />

                        <ImageView
                            android:id="@+id/img_push_friend_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="9dp"
                            android:background="@null"
                            android:src="@mipmap/push_friend_today" />

                        <ImageView
                            android:id="@+id/img_push_time_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:src="@mipmap/push_time_today" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp">

                        <TextView
                            android:id="@+id/tvLoc_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="위치"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/tvPeople_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="9dp"
                            android:text="참여자1 참여자2"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/tvTime_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00PM"
                            android:textSize="10dp"
                            />
                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="1px"
                    android:layout_height="0dp"
                    android:layout_weight="0.16" />

            </LinearLayout>

        </LinearLayout>


        <Space
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="0.03" />
    </LinearLayout>

    <Space
        android:layout_width="1px"
        android:layout_height="0dp"
        android:layout_weight="0.034" />


    <ListView
        android:id="@+id/listViewPush"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.559"
        android:dividerHeight="5dp"
        android:divider="#00ffffff" />

