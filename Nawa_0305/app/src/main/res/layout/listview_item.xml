<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="380sp"
    android:layout_height="130sp"
    android:layout_marginLeft="5sp"
    android:background="@drawable/under_view"
    android:layout_marginTop="90sp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:background="@drawable/call_button"
            android:layout_width="115sp"
            android:layout_height="115sp"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_marginLeft="40sp"
            android:layout_marginTop="25sp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신당역 4번출구"
                android:textSize="12sp"
                android:id="@+id/location_textview" />
            <TextView
                android:layout_marginTop="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="김아름 박아름"
                android:textSize="12sp"
                android:id="@+id/people_textview" />
            <TextView
                android:layout_marginTop="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 PM"
                android:textSize="12sp"
                android:id="@+id/time_textview" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="2sp"
        android:layout_marginTop="85sp"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_marginRight="10sp"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:id="@+id/trash"
            android:background="@drawable/delete_icon_unclick"/>

        <ImageButton
            android:layout_marginRight="15sp"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:id="@+id/edit"
            android:background="@drawable/edit_icon_unclick"/>
    </LinearLayout>
    <TextView
        android:id="@+id/name"
        android:layout_marginTop="7sp"
        android:layout_marginLeft="7sp"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:paddingTop="10sp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:text="앱잼 조 모임"/>
</FrameLayout>